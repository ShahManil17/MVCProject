
@{
    ViewData["Title"] = "display_personal_details";
    Layout = "_SecondLayout";
}
<body>
    <h1 style="color:blueviolet" class="text-center">Your Details</h1><br />
    @{
        if (ViewBag.userList != null)
        {
            <table cellspacing="0" cellpadding="15" style="margin:50px auto; font-size:20px; background-color:lightcyan">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Contact Number</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Password</th>
                </tr>
                <tr>
                    <td>@ViewBag.userList.id</td>
                    <td>@ViewBag.userList.first_name</td>
                    <td>@ViewBag.userList.last_name</td>
                    <td>@ViewBag.userList.age</td>
                    <td>@ViewBag.userList.gender</td>
                    <td>@ViewBag.userList.phone_no</td>
                    <td>@ViewBag.userList.email</td>
                    <td>@ViewBag.userList.role</td>
                    <td>@ViewBag.userList.password</td>
                </tr>
            </table>
        }
    }
</body>
