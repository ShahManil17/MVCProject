@model PermissionTaskWithMVC.Models.LoginModel;

@{
    Layout = null;
    ViewData["Title"] = "Login Page";
}

<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="~/lib/bootstrap/dist/css/bootstrap.css"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
        }

        #login .container #login-row #login-column #login-box {
            margin-top: 120px;
            max-width: 600px;
            height: 320px;
            border-radius: 10px;
            border: 1px solid #9C9C9C;
            background-color:lightgoldenrodyellow;
            height: 380px;
        }

            #login .container #login-row #login-column #login-box #login-form {
                padding: 20px;
            }

                #login .container #login-row #login-column #login-box #login-form #register-link {
                    margin-top: -85px;
                }
    </style>

</head>

<body>
    <div id="login">
        <div class="container pt-5">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12" style="">
                        <form asp-action="ValidatePass" asp-controller="Login" class="form" method="post" style="padding:50px">
                            <h3 class="text-center text-info">Login</h3>
                            <div class="form-group">
                                <label for="id" class="text-info">User Id:</label><br />
                                <input name="id" id="id" placeholder="Enter Id" class="form-control" /><br />
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Password:</label><br>
                                <input name="password" id="password" placeholder="Enter Password" class="form-control" /><br />
                            </div>
                            <div class="form-group">
                                <br /><input type="submit" name="submit" class="btn btn-info form-control" value="submit">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


